<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/thumbImageURL1"
        android:layout_width="96dp"
        android:layout_height="119dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp" />

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="133dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/name1"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="44dp"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/brand1"
            android:layout_width="193dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/name1"
            android:layout_below="@+id/name1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/description1"
            android:layout_width="236dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/brand1" />

        <TextView
            android:id="@+id/price1"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtViewP1"
            android:layout_toEndOf="@+id/txtViewP1" />

        <TextView
            android:id="@+id/rating1"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/description1"
            android:layout_alignTop="@+id/price1" />

        <TextView
            android:id="@+id/txtViewR1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/price1"
            android:layout_toStartOf="@+id/rating1"
            android:text="Rating:" />

        <TextView
            android:id="@+id/txtViewP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/name1"
            android:layout_marginBottom="17dp"
            android:text="Price:" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_item"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


    </RelativeLayout>

    <ImageButton
        android:id="@+id/button_favorite"
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:padding="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:onClick="heart"
        android:clickable="true"
        android:background="@drawable/favorheart" />



</RelativeLayout>