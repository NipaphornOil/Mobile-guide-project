<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/thumbImageURLFov"
        android:layout_width="96dp"
        android:layout_height="119dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp" />

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="133dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/nameFov"
            android:text="@{viewmodel.name}"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="44dp"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceFov"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtViewPFov"
            android:layout_toEndOf="@+id/txtViewRFov"
            android:text="@{viewmodel.price}" />

        <TextView
            android:id="@+id/ratingFov"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtViewRFov"
            android:layout_centerHorizontal="true"
            android:text="@{viewmodel.rating}" />

        <TextView
            android:id="@+id/txtViewRFov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/nameFov"
            android:layout_marginBottom="24dp"
            android:text="Rating:" />

        <TextView
            android:id="@+id/txtViewPFov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/nameFov"
            android:layout_marginTop="40dp"
            android:text="Price:" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_item"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


    </RelativeLayout>





</RelativeLayout>